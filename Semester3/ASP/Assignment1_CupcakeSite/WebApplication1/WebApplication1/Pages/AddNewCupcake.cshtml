@page
@model CupcakeApplication.Pages.AddNewCupcakeModel
@{
}

<h1>Add New Cupcake</h1>
<div class="w-75">

	<form method="post" enctype="multipart/form-data">
		<div class="mb-3">
			<label asp-for="FileUpload" class="form-label"></label><br />
			<input asp-for="FileUpload" class="form-control" />
			<span asp-validation-for="FileUpload" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Cupcake.Name" class="form-label"></label><br />
			<input asp-for="Cupcake.Name" class="form-control" />
			<span asp-validation-for="Cupcake.Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Cupcake.Description" class="form-label"></label><br />
			<textarea asp-for="Cupcake.Description" class="form-control"></textarea>
			<span asp-validation-for="Cupcake.Description" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Cupcake.Price" class="form-label"></label><br />
			<input asp-for="Cupcake.Price" class="form-control" />
			<span asp-validation-for="Cupcake.Price" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<input type="submit" value="Add" class="btn btn-primary" />
			<a asp-page="/Index" class="btn btn-secondary">Cancel</a>
		</div>

	</form>
</div>
